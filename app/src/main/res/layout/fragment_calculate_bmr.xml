<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/light"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragCalcBRM_AgeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Age"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/fragCalcBRM_Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textSize="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/fragCalcBRM_MinusAge"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/color_alpha_100percent"
                        app:srcCompat="@drawable/ic_remove_circle_outline_primary_35dp" />

                    <ImageButton
                        android:id="@+id/fragCalcBRM_PlusAge"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/color_alpha_100percent"
                        app:srcCompat="@drawable/ic_add_circle_outline_primary_35dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/light"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragCalcBRM_WeightTItle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Weight"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/fragCalcBRM_Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="88kg"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textSize="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/fragCalcBRM_MinusWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/color_alpha_100percent"
                        app:srcCompat="@drawable/ic_remove_circle_outline_primary_35dp" />

                    <ImageButton
                        android:id="@+id/fragCalcBRM_PlusWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/color_alpha_100percent"
                        app:srcCompat="@drawable/ic_add_circle_outline_primary_35dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/color_alpha_100percent"
                    app:srcCompat="@drawable/ic_remove_circle_outline_primary_35dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/color_alpha_100percent"
                    app:srcCompat="@drawable/ic_add_circle_outline_primary_35dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragCalcBMR_SexLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@color/light"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:text="@string/fragCalcBRM_im"
                android:textColor="@color/dark"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragCalcBRM_FemaleOFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/fragCalcBRM_Female"
                android:visibility="visible"
                app:strokeColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragCalcBRM_FemaleON"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/fragCalcBRM_Female"
                android:visibility="gone"
                app:strokeColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragCalcBRM_MaleOFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/fragCalcBRM_Male"
                android:visibility="visible"
                app:strokeColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragCalcBRM_MaleON"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/fragCalcBRM_Male"
                android:visibility="gone"

                app:strokeColor="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragCalcBMR_ActivityRatingLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/light"

            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="25dp"
                android:text="Weekly activity rating"
                android:textAlignment="center"
                android:textColor="@color/dark" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark"
             >

                <AutoCompleteTextView
                    android:id="@+id/fragCalcBRM_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/dark"
                    android:backgroundTint="@color/dark"
                    android:editable="false"
                    android:outlineSpotShadowColor="@color/light"
                    android:textColor="@color/light" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/elevation_shadow_background_light"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/fragCalcBRM_HeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:text="Height"
                android:textAlignment="center"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/fragCalcBRM_Height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="179cm"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="45dp" />


            <com.google.android.material.slider.Slider
                android:id="@+id/fragCalcBRM_HeightSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/SliderBarTheme"
                android:valueFrom="130"
                android:valueTo="240" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>